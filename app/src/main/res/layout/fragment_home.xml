                        <!-- About Us Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/aboutUsCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/gradient_background"
                                android:padding="24dp">

                                <!-- Title -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="About Travel Eva"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="8dp"/>

                                <!-- Tagline -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Journey, Simplified"
                                    android:textSize="16sp"
                                    android:textStyle="italic"
                                    android:textColor="@color/gray"
                                    android:layout_marginBottom="16dp"/>

                                <!-- Description -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Travel Eva revolutionizes travel planning by offering seamless booking experiences, curated travel guides, and personalized recommendations. Our platform connects travelers with authentic local experiences while ensuring safety and convenience."
                                    android:textSize="14sp"
                                    android:lineSpacingMultiplier="1.2"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="16dp"/>

                                <!-- Key Features -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="✓ Real-time Booking Updates\n✓ 24/7 Customer Support\n✓ Verified Travel Partners\n✓ Eco-friendly Initiatives"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray"
                                    android:lineSpacingMultiplier="1.5"
                                    android:layout_marginBottom="16dp"/>

                                <!-- Contact -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="📧 contact@traveleva.com\n📱 +91 12345 67890"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray"
                                    android:autoLink="all"
                                    android:linksClickable="true"/>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
                </ScrollView>
            </LinearLayout>
